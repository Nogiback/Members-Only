doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous" defer)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous" defer)
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
      block navbar
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark.p-3.rounded-3
          a.navbar-brand(href='/')
            img.d-inline-block.align-text-top(src='/images/messages-square.svg' alt='logo' width='32' height='26') 
            strong  Nogi Club
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            if currentUser
              ul.navbar-nav
                li.nav-item
                  form(action="/profile" method="get")
                    button.btn.nav-link Profile
                li.nav-item
                  form(action="/logout" method="post")
                    button.btn.nav-link Logout 
            else
              ul.navbar-nav.me-auto
                li.nav-item
                  form(action="/login" method="get")
                    button.btn.nav-link Login
                li.nav-item
                  form(action="/signup" method="get")
                    button.btn.nav-link Signup

      div.d-flex.flex-column.align-items-center.justify-content-center.h-100.position-relative
        block content

      footer.navbar.fixed-bottom.navbar-dark.bg-dark.justify-content-center.p-1
        a.navbar-brand(href="https://github.com/Nogiback/Members-Only" target="_blank") 
          small.m-0 Built By Nogiback 
            img.d-inline-block.align-text-top(src='/images/github.svg' alt='logo' width='24' height='18') 