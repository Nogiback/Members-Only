extends layout

block content
  .dialog.border.border-3.rounded.border-dark.p-5.d-flex.flex-column.align-items-center.bg-primary.text-white
    h2.text-center Welcome to Nogi Club
    h5.mb-4 Sign Up
    form.form-group.d-flex.flex-column.m-auto(action="/signup" method="post")
      .form-group.d-flex
        .d-flex.flex-column.mr-2
          label(for="firstname") First Name
          input.form-control(type="text" name="firstname" required)
        .d-flex.flex-column
          label(for="lastname") Last Name
          input.form-control(type="text" name="lastname" required)
      label(for="username") Username
      input.form-control(type="text" name="username" required)
      br
      label(for="password") Password
      input.form-control(type="password" name="password" required)
      br
      label(for="confirmPassword") Confirm Password
      input.form-control(type="password" name="confirmPassword" required)
      br
      button.btn.btn-dark(type="submit") Sign Up
      if errors 
        each error in errors 
          p=error.msg